<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff8f6"
    android:fitsSystemWindows="true"
    tools:context="com.example.muchu.way2shop.SignUp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="20dp"
            android:weightSum="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon"/>

            <TextView
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="italic"
                android:textColor="#52323d"
                />

        </RelativeLayout>

        <TextView
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create new account"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textColor="#52323d"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">


            <EditText
                android:id="@+id/et_username_register"
                android:background="@drawable/edit_text"
                android:ems="10"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="  User name"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">


            <EditText
                android:id="@+id/et_email_register"
                android:background="@drawable/edit_text"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="  Email"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">



            <EditText
                android:id="@+id/et_password_register"
                android:background="@drawable/edit_text"
                android:layout_width="match_parent"
                android:ems="10"
                android:inputType="textPassword"
                android:layout_height="40dp"
                android:hint=" PASSWORD"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp">

            <Button
                android:id="@+id/bt_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/but"
                android:text="REGISTER"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or sign in with:"
            android:textColor="#011f4b"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp"
            android:textSize="15sp"/>
        <RelativeLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/sign_in_with_google"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/google_icon"/>
            <ProgressBar
                android:id="@+id/progressBar_register"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/sign_in_with_google"
                android:layout_centerHorizontal="true"
                android:visibility="gone"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="By signing up you are agree with our terms and condition" />


        </RelativeLayout>



    </LinearLayout>

</android.support.constraint.ConstraintLayout>